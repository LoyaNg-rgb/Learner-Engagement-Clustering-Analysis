# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Data files
*.csv text eol=lf
*.tsv text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.xlsx binary
*.xls binary
*.zip binary
*.tar binary
*.gz binary

# Git
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Archives
*.7z binary
*.gz binary
*.tar binary
*.zip binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests/ export-ignore
*.pyc export-ignore
__pycache__/ export-ignore
